{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./src",  // Compile source files from "src" directory
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "src/*": ["dist/*"],  // Compile source files to dist
    }
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
